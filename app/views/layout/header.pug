mixin navItem(name, href)
  - var color = pageTarget == '/' ? 'navbar__item--white' : 'navbar__item--blue';
  - var active = pageTarget == href ? 'navbar__item--active' : '';
  - var classes = ['navbar__item', color, active];
    +link(href)(class=classes)= name

mixin navSub(name, href)
  - var active = pageTarget == href ? 'navSub--active' : '';
  - var classes = ['navSub', active];
    +link(href)(class=classes)= name

